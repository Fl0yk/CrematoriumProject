<Window x:Class="Crematorium.UI.Pages.LogAndRegPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crematorium.UI.Pages"
        xmlns:ViewModels="clr-namespace:Crematorium.UI.ViewModels"
        mc:Ignorable="d"
        Title="" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Width="200" HorizontalAlignment="Center">
            <Label Width="200" Height="25" HorizontalAlignment="Center" Margin="0, 10, 0, 0">Введите имя</Label>
            <TextBox Width="200" HorizontalAlignment="Center" Margin="0, 2, 0, 10" Text="{Binding InputName}"/>

            <Label Width="200" Height="25" HorizontalAlignment="Center">Введите номер паспорта</Label>
            <TextBox Width="200" HorizontalAlignment="Center" Margin="0, 2, 0, 10" Text="{Binding InputNumPassport}"/>
            <Button Width="100" Height="20" HorizontalAlignment="Center" Margin="0, 10, 0, 10" Click="Log_Click">
                Войти
            </Button>
        </StackPanel>
    </Grid>
</Window>
